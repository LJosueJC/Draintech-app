<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    package="com.draintech.draintech">
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Draintech">

        <!-- Launcher Activity -->
        <activity
            android:name=".ui.main.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Draintech">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Register Activity -->
        <activity
            android:name=".ui.main.RegisterActivity"
            android:exported="true"
            android:label="Registro"
            android:theme="@style/Theme.Draintech" />

        <!-- Main Activity -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:label="Pantalla Principal"
            android:theme="@style/Theme.Draintech" />

        <!-- Registro dispositivo -->
        <activity
            android:name=".ui.main.AddDeviceActivity"
            android:exported="true"
            android:label="Agregar Dispositivo"
            android:theme="@style/Theme.Draintech" />

        <!-- Registro dispositivo -->
        <activity
            android:name=".ui.main.DeviceDetailActivity"
            android:exported="true"
            android:label="Detalles del dispositivo"
            android:theme="@style/Theme.Draintech" />

        <service
            android:name=".ui.main.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>
